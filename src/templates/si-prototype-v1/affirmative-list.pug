extends ../../layouts/layout-beta.pug

block content
  .section--primary
    .container
      h1 Made affirmative statutory instruments
      p Current draft affirmative statutory instruments laid before Parliament.
      p A to Z - select a letter

      //- Letter Navigation
      nav(class='navigation--letter', aria-label='Paged navigation')
        ol
          each val, index in ['all', 'a','b','c','d','e','f','g','h','i','j','k','l','m','n','o','p','q','r','s','t','u','v','w','x','y','z']
            li(data-letter=val, class= (index === 0 ? "active" : undefined))
              if index === 0
                span(data-atoz-see='true')= val
              else
                a(data-atoz-see='true', href='#')= val

  section(tabindex=0)#content
    .container
      ol.list--block
        li
          .list--details
            h2 #[+link('affirmative.html', 'EU Withdrawal Bill Statutory Instrument 1')]
            p Laid before the House of Commons and House of Lords on 18 Apr 2018
            p Department for Exiting the European Union
        li
          .list--details
            h2 #[+link('#', 'The Cash Ratio Deposits (Value Bands and Ratios) Order 2018')]
            p Laid before the House of Commons and House of Lords on 16 April 2018
            p HM Treasury
        li
          .list--details
            h2 #[+link('#', 'The Package Travel and Linked Travel Arrangements Regulations 2018')]
            p Laid before the House of Commons and House of Lords on 16 April 2018
            p Department for Business, Energy and Industrial Strategy
        li
          .list--details
            h2 #[+link('#', 'The Licensing Act 2003 (Royal Wedding Licensing Hours) Order 2018')]
            p Laid before the House of Commons and House of Lords on 21 March 2018
            p Department for Exiting the European Union
        li
          .list--details
            h2 #[+link('#', 'The Double Taxation Relief (Base Erosion and Profit Shifting) Order 2018')]
            p Laid before the House of Commons on 28 March 2018
            p HM Revenue and Customs
